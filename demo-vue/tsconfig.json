{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "preserveSymlinks": true,
    "esModuleInterop": false,
    "importHelpers": false,
    "lib": ["es6", "dom", "es2015.iterable", "es2017"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "tns-core-modules": ["./node_modules/@nativescript/core"],
      "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
      "*": ["./node_modules/*"]
    },
    "moduleResolution": "node",
    "removeComments": false
  },
  "include": ["app/**/*"],
  "exclude": ["**/angular", "node_modules", "platforms"]
}
